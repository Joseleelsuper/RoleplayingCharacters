# Configuración de la aplicación
APP_NAME=Roleplaying Characters Manager
APP_VERSION=1.0.0
DEBUG=True

# Configuración del servidor
HOST=127.0.0.1
PORT=8000

# Configuración de base de datos
POSTGRES_URL="postgres://user:password@hostname:port/database?sslmode=require"
POSTGRES_USER="postgres"
POSTGRES_HOST="your-db-host.example.com"
POSTGRES_PASSWORD="your-password"
POSTGRES_DATABASE="postgres"
SUPABASE_URL="https://your-project-id.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_JWT_SECRET="your-jwt-secret"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
POSTGRES_PRISMA_URL="postgres://user:password@hostname:port/database?sslmode=require&pgbouncer=true"
POSTGRES_URL_NON_POOLING="postgres://user:password@hostname:port/database?sslmode=require"

# Configuración de seguridad
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuración CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Configuración de logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s