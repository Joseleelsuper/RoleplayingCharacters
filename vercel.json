{
  "version": 2,
  "builds": [
    {
      "src": "src/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "robots.txt",
      "use": "@vercel/static"
    },
    {
      "src": "sitemap.xml",
      "use": "@vercel/static"
    },
    {
      "src": "templates/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/robots.txt",
      "dest": "/robots.txt"
    },
    {
      "src": "/sitemap.xml",
      "dest": "/sitemap.xml"
    },
    {
      "src": "/css/(.*)",
      "dest": "/templates/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/templates/js/$1"
    },
    {
      "src": "/img/(.*)",
      "dest": "/templates/img/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/src/index.py"
    }
  ],
  "env": {
    "PYTHONPATH": "./src"
  }
}
